{
  "name": "my-little-pony",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "fontsource-roboto": "^2.2.3",
    "preact": "^10.1.1",
    "prop-types": "^15.7.2",
    "react-icons": "^3.10.0",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-rem": "^4.0.0",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "node-sass": "^4.14.1",
    "poi": "^12.9.0",
    "prettier": "^2.0.5",
    "sass-loader": "^9.0.2",
    "xo": "^0.32.1"
  },
  "main": "src/index.jsx",
  "scripts": {
    "build": "poi --prod",
    "dev": "poi --serve"
  },
  "xo": {
    "extends": [
      "rem",
      "xo-react",
      "plugin:prettier/recommended",
      "prettier/react",
      "prettier/flowtype"
    ],
    "env": [
      "browser"
    ],
    "rules": {
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "camelCase": true,
            "pascalCase": true
          }
        }
      ],
      "import/no-unassigned-import": 0,
      "react/no-unknown-property": [
        "error",
        {
          "ignore": [
            "class"
          ]
        }
      ],
      "react/prop-types": [
        "error",
        {
          "ignore": [
            "children"
          ]
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "Fragment"
        }
      ],
      "react/jsx-no-useless-fragment": 0,
      "import/extensions": 0,
      "import/no-anonymous-default-export": 0
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "xo --fix"
    ],
    "*.{md,json,css}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "sideEffect": false
}
